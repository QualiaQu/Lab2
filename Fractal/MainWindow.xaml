<Window x:Class="Fractal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fractal"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid Background="Gray">  
        <StackPanel>  
                <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center"  Margin="5,5,5,0">  
                    <Button Click="btnStart_Click"  Width="100" Height="30" FontSize="20" Content="Start"/>  
                    <TextBlock Name="TbLabel" FontSize="20" Margin="5,0,0,0"/>  
                </StackPanel>
                <Canvas HorizontalAlignment="Center" VerticalAlignment="Top" Name="Canvas1"  Width="800"  Height="840" 
                        Margin="0,20,0,0"/>  
        </StackPanel>  
  
    </Grid>  
</Window>
