    <Grid>
        <Canvas x:Name="MainCanvas" HorizontalAlignment="Left" Height="970" VerticalAlignment="Top" Width="1363">
            <Canvas Panel.ZIndex="1" x:Name="col1" DragEnter="Drag_Enter" DragLeave="Drag_Leave" Background= "Transparent" AllowDrop="True" Drop="col_Drop" Height="400" Width="240" Canvas.Left="80" Canvas.Bottom="370"/>
            <Canvas Panel.ZIndex="1" x:Name="col2" DragEnter="Drag_Enter" DragLeave="Drag_Leave" Background= "Transparent" AllowDrop="True" Drop="col_Drop" Height="401" Width="240" Canvas.Left="560" Canvas.Bottom="370" Canvas.Top="200"/>
