            <Rectangle Fill="#008B8B" Height="41" Stroke="gray" Width="240" Canvas.Left="80" Canvas.Top="600"/>
            <Rectangle Fill="#008B8B" Height="41" Stroke="gray" Width="240" Canvas.Left="560" Canvas.Top="601"/>
            <Rectangle Fill="#008B8B" Height="41" Stroke="gray" Width="240" Canvas.Left="1040" Canvas.Top="599"/>
            <Rectangle Fill="#008B8B" Height="400" Stroke="gray" Width="40" Canvas.Left="180" Canvas.Top="200"/>
            <Rectangle Fill="#008B8B" Height="400" Stroke="gray" Width="40" Canvas.Left="660" Canvas.Top="201"/>
            <Rectangle Fill="#008B8B" Height="400" Stroke="gray" Width="40" Canvas.Left="1140" Canvas.Top="200"/>
            <Button x:Name="Start_Button" Content="Поехали!" Width="140" Canvas.Left="80" Canvas.Top="10" Height="41" Click="Button_Click"/>

        </Canvas>
    </Grid>
</Window>
